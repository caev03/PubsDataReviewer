<html>

<head>
    <title>Review papers</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <main>
            <div class="row">
                <div class="col-md-9">
                    <div class="py-5">
                        <h1>
                            <%- publication.title %>
                        </h1>
                        <p class="lead">
                            <%- publication.authors %> - <%- publication.citationsAmount  %>
                        </p>
                        <p class="lead text-wrap">
                            <%- publication.articleContent %>
                        </p>
                    </div>
                </div>
                <div class="col-md-3 d-grid col-3">
                    <br><br>
                    <a href="<%= publication.link %>" class="btn btn-outline-primary" role="button" target="_blank">Visit Publication page ></a>
                    <% if (publication.pdfURL) { %>
                        <br>
                        <a href="<%= publication.pdfURL %>" class="btn btn-outline-danger" role="button" target="_blank">See PDF ></a>
                        <br>
                    <%} else { %>
                        <br>
                    <% } %>
                    <a href="<%= publication.citationsURL %>" class="btn btn-outline-success" role="button" target="_blank">See citations ></a>
                    <br>
                    <a href="<%= publication.relatedArticles %>" class="btn btn-outline-dark" role="button" target="_blank">See Related Articles ></a>
                    <br><br>
                </div>
            </div>
            
            <form action="/savereview" , method="POST">
                <input class="form-control" type="text" name="pubID" style="visibility: hidden;"
                    value="<%= publication.pubID %>">
                    <div class="row g-3">
                        <div class="col-sm-3">
                            <label for="result">Include this paper?</label>
                            <select class="form-select" name="result" aria-label="Default select example">
                                <option value="0" selected>False</option>
                                <option value="1">True</option>
                              </select>
                        </div>
                        <div class="col-sm-8">
                            <label for="comments">Comments:</label>
                            <input class="form-control" type="text" name="comments">
                        </div>
                        <div class="col-sm-1 d-grid">
                            <input class="btn btn-primary" type="submit" value="Submit">
                        </div>
                    </div>                
            </form>
        </main>
    </div>

</body>

<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

</html>