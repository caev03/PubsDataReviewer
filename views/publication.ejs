<html>

<head>
    <title>Review papers</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
            padding-top: 0px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        h4 {
            font-weight:normal;
        }
    </style>
</head>

<body>
    <div class="container">
        <main>
            <div class="row">
                <div class="col-md-8">
                    <div class="py-3">
                        <h1>
                            <%- publication.title %>
                        </h1>
                        <h2>ID: <%- publication.pubID  %></h2>
                        <h4>
                            <%- publication.authors %> - <%- publication.citationsAmount  %>
                        </h4>
                        <h4 class="text-wrap">
                            <%- publication.articleContent %>
                        </h4>
                        <div class="row">
                            <div class="col-sm-3 d-grid">
                                <a href="<%= publication.link %>" class="btn btn-outline-primary" role="button" target="_blank">Visit Publication page ></a>
                            </div>
                            <% if (publication.pdfURL) { %>
                                <div class="col-sm-3 d-grid">
                                    <a href="<%= publication.pdfURL %>" class="btn btn-outline-danger" role="button" target="_blank">See PDF ></a>
                                </div>
                            <%} else { %>
                                
                            <% } %>
                            <div class="col-sm-3 d-grid">
                                <a href="<%= publication.citationsURL %>" class="btn btn-outline-success" role="button" target="_blank">See citations ></a>
                            </div>
                            <div class="col-sm-3 d-grid">
                                <a href="<%= publication.relatedArticles %>" class="btn btn-outline-dark" role="button" target="_blank">See Related Articles ></a>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="col-md-4">
                    <form action="/savereview" method="POST" class="d-grid gap-3">
                        <input class="form-control" type="text" name="pubID" style="visibility: hidden;"
                            value="<%= publication.pubID %>">
                                <div>
                                    <label for="result">Include this paper?</label>
                                    <select class="form-select" name="result" aria-label="Default select example">
                                        <option value="1" selected>True</option>
                                        <option value="0">False</option>
                                        <option value="2">Undecided</option>
                                      </select>
                                </div>
                                <div class="form-floating">
                                    <textarea class="form-control" id="comments" name="comments" style="height: 100px"></textarea>
                                    <label for="comments">Comments:</label>
                                </div>
                                <div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="interesting" name="interesting">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Interesting paper?
                                        </label>
                                    </div>
                                </div>
                                <div class="d-grid">
                                    <input class="btn btn-primary" type="submit" value="Submit">
                                </div>               
                    </form>
                </div>
            </div>
        </main>
    </div>

</body>

<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

</html>